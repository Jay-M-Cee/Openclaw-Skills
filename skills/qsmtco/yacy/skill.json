{
  "name": "yacy",
  "version": "0.1.0",
  "description": "Control and manage a local YaCy search engine instance",
  "author": "You",
  "license": "GPL-2.0-or-later",
  "openclaw": ">=2026.2.9",
  "keywords": ["search", "yacy", "privacy", "p2p"],
  "tools": [
    {
      "name": "yacy_start",
      "description": "Start the YaCy search engine",
      "handler": "scripts/yacy_start.sh"
    },
    {
      "name": "yacy_stop",
      "description": "Stop the YaCy search engine",
      "handler": "scripts/yacy_stop.sh"
    },
    {
      "name": "yacy_status",
      "description": "Check if YaCy is running and accessible",
      "handler": "scripts/yacy_status.sh"
    },
    {
      "name": "yacy_search",
      "description": "Search the web using the local YaCy instance",
      "handler": "scripts/yacy_search.sh",
      "parameters": [
        {
          "name": "query",
          "type": "string",
          "description": "Search query string"
        },
        {
          "name": "count",
          "type": "number",
          "description": "Number of results to return (default 10)",
          "optional": true,
          "default": 10
        }
      ]
    }
  ],
  "config": {
    "yacy_dir": {
      "type": "string",
      "default": "/home/q/.openclaw/workspace/yacy_search_server",
      "description": "Path to YaCy installation directory"
    },
    "port": {
      "type": "number",
      "default": 8090,
      "description": "Port where YaCy web interface is exposed"
    }
  }
}
